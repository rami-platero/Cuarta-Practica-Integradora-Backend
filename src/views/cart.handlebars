<div>
  {{#if cart}}
    <h1>Cart: {{cart._id}}</h1>

    {{#each cart.products}}
      <div class="product">
        <h2 class="title">{{this.product.title}}</h2>
        <h3 class="quantity">Quantity: {{this.quantity}}</h3>
        <h3 class="price">$ {{this.product.price}}.00</h3>
      </div>
    {{/each}}

    <button class="purchaseBtn" data-cid={{cart._id}}>Purchase items</button>
  {{else}}
    <h1>The cart you are trying to view doesn't exist!</h1>
    <a href="/">Back to home</a>
  {{/if}}

</div>

<script src="/js/cart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script
  type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/toastify-js"
></script>